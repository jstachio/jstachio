     <pistachio.version>0.1.2</pistachio.version>

    <spring.version>6.1.6</spring.version>
    <spring-boot.version>3.2.5</spring-boot.version>
    <dropwizard.version>4.0.7</dropwizard.version>
    
    <plexus-compiler-eclipse.version>2.15.0</plexus-compiler-eclipse.version>
    <ecj.version>3.37.0</ecj.version>
    <error-prone.version>2.26.1</error-prone.version>
    <checkerframework.version>3.42.0</checkerframework.version>

    <maven.build.cache.enabled>false</maven.build.cache.enabled>

  </properties>
  <modules>
    <module>etc</module>
    <module>api</module>
    <module>test</module>
    <module>compiler</module>
    <module>spec</module>
    <module>opt</module>
  </modules>
  <scm>
    <connection>scm:git:https://github.com/jstachio/jstachio.git</connection>
    <developerConnection>scm:git:https://github.com/jstachio/jstachio.git</developerConnection>
